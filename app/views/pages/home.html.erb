
<div class = "row">
    <div class="col-xs-3">

      <div class="panel panel-default">
        <div class="panel-image hide-panel body">
          <img src="/micflip.jpg" class="panel-image-preview">
        </div>
            <div class="panel text-center">
              <div class="row">
                <div class="col-sm-2"><img src="wizicon.png" height="50px" width="50px" class="rounded-img home-avatar"></div>
                <div class="col-sm-10"><h4 style="text-align: center;"><%= current_user.username %></h4></div>
                <div class="col-sm-12" style="margin-top: 10px;">
                  <div class="col-sm-6" style="font-size: 80%; opacity: .07;">BARKS<br>
                    <h6 style="color: #008484; font-size: 200%;">16</h6>
                  </div>
                  <div class="col-sm-6" style="font-size: 80%; opacity: .07;">FOLLOWERS<br>
                    <h6 style="color: #008484; font-size: 200%;">15</h6>
                  </div>
                </div>
              </div>

              </div>
            </div>

              <div class="panel panel-default">
                <div class="panel-body">
              <h5>Trending Barks</h5>
            </div>
          </div>
        </div>
      <div class="col-xs-6">
        <%= render '/tweets/post_form' %><br><br>

        <% for @t in @tweets %>
          <div class="panel panel-default tweet-panel">
            <div class="panel-body row">
              <div class="col-sm-1">
                <img src="/wizicon.png"class="rounded-img" height="50px" width="50px"></img>
              </div>
              <div class="col-sm-11">
                <p class="tweet-title"><span class="tweet-owner"><%= User.find(@t.user_id).username %></span> <span class="tweet-creation"> - <%= @t.created_at.to_formatted_s(:short) %></span> </p>
                <p class="tweet-message"><%= @t.message %></p>
              </div>
              <div class="col-sm-12">
                <p class="tweet-links">

                  <span class="glyphicon glyphicon-comment g-links" aria-hidden="true"></span>
                  <span class="glyphicon glyphicon-retweet g-links" aria-hidden="true"></span>
                  <span class="glyphicon glyphicon-heart g-links" aria-hidden="true"></span>
                  <span class="glyphicon glyphicon-thumbs-down g-links" aria-hidden="true"></span>
                  <span class="glyphicon glyphicon-option-horizontal g-links" aria-hidden="true"></span>
                  <a href="">View Conversation</a>
                </p>

              </div>

            </div>
          </div>
          <% end %>

          <div class="panel panel-default tweet-panel">
            <div class="panel-body row">
              <div class="col-sm-12">

                <center><img src="/barkicon.png" height="25px" width="25px"></img>
                  <a href="#top"><p class="opacity: .7;">Back to Top <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span></p></center>
              </div>

            </div>
          </div>
    </div>
    <div class="col-xs-3">
      <div class="panel panel-default">
        <div class="panel-body">
